<div class="container">
  <div class="col-md-3"></div>
  <div class="col-md-6">
<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.text_field :first_name ,class:"form-group form-control",placeholder:"Enter First Name..."%>
  </div><br>

  <div>
    <%= form.text_field :last_name,class:"form-group form-control",placeholder:"Enter Last Name..." %>
  </div><br>

  <div>
    <%= form.text_field :email,class:"form-group form-control",placeholder:"Enter email..." %>
  </div><br>

  <div>
    <%= form.text_field :phone,class:"form-group form-control",placeholder:"Ente Phone..." %>
  </div><br>

  <div>
    <%= form.text_field :twitter,class:"form-group form-control",placeholder:"Enter twitter..." %>
  </div><br>
  <div>
    <%= form.number_field :user_id,id: :friend_user_id,class:"form-group form-control",value:current_user.id,type:"hidden" %>
  </div>
  <br>


  <div>
    <%= link_to "Back to friends", friends_path,class:"btn btn-outline-success" %>
    <%= form.submit class:"btn btn-outline-success"%>
  </div>
<% end %>
</div>
<div class="col-md-3"></div>
</div>