
<h1>Detail Friend</h1>
<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <td>Name</td>
      <td>Email</td>
      <td>Phone_Number</td>
      <td>Twitter</td>
      <td colspan="3" class="text-center">Action</td>
    </tr>
  </thead>
  <tbody>
   
    <%= render @friend %>
    <td><%= link_to "Edit", edit_friend_path(@friend),class:"btn btn-outline-success btn-sm" %></td>
    <td><%= button_to "Delete", @friend, method: :delete,data: { confirm:'Are you sure?'},class:"btn btn-outline-danger btn-sm"%></td>
  </tr>
  </tbody>
</table>
